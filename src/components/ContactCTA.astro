---
import CallToAction from './CallToAction.astro';
import Icon from './Icon.astro';
---

<aside id="contact">
	<header class="section-header stack gap-2 lg:gap-4">
		<h3>Contact Me</h3>
		<p>Reach out to discuss collaborations, projects, or just to say hello!</p>
	</header>
	<div class="contact-content-wrapper">
		<div class="contact-details-wrapper">
			<div class="contact-info">
				<h3>Akashdeep Gupta</h3>
				<p><i class="fa-regular fa-envelope"></i> akashdeepg06@gmail.com</p>
				<p><i class="fa-solid fa-mobile-screen-button"></i> +91 6392376517</p>
				<p><i class="fa-solid fa-location-dot"></i> Gurugram, India</p>
				<p><i class="fa-brands fa-linkedin"></i> <a href="https://www.linkedin.com/in/akashdeep-47/" target="_blank" rel="noopener noreferrer">LinkedIn</a></p>
				
			</div>
		</div>
		<form class="contact-form">
			<div class="form-group">
				<label for="name">Name:</label>
				<input type="text" id="name" name="name" required />
			</div>
			<div class="form-group">
				<label for="email">Email:</label>
				<input type="email" id="email" name="email" required />
			</div>
			<div class="form-group">
				<label for="subject">Subject:</label>
				<input type="text" id="subject" name="subject" required />
			</div>
			<div class="form-group">
				<label for="message">Message:</label>
				<textarea id="message" name="message" rows="5" required></textarea>
			</div>
			<CallToAction href="mailto:akashdeepg06@gmail.com">
				Send Me a Message
				<Icon icon="paper-plane-tilt" size="1.2em" />
			</CallToAction>
		</form>
	</div>
</aside>

<style>
	aside {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 3rem;
		border-top: 1px solid var(--gray-800);
		border-bottom: 1px solid var(--gray-800);
		padding: 5rem 1.5rem;
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-sm);
	}

	.section-header {
		justify-self: center;
		text-align: center;
		max-width: 50ch;
		font-size: var(--text-md);
		color: var(--gray-300);
	}

	.section-header h3 {
		font-size: var(--text-4xl) !important;
	}

	.contact-content-wrapper {
		display: flex;
		flex-direction: column;
		gap: 3rem;
		width: 100%;
	}

	.contact-details-wrapper {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		width: 100%;
		padding: 2rem;
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-sm);
	}

	@media (min-width: 50em) {
		aside {
			padding: 7.5rem;
		}

		.contact-content-wrapper {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 3rem;
			width: 100%; /* Ensure it takes full width within aside */
			max-width: var(--wrapper-width); /* Constrain content width */
		}

		.contact-details-wrapper {
			padding: 1.5rem;
			/* Removed align-items: center; */
			text-align: left; /* Left align content */
			/* Removed max-width and margin: 0 auto; to make it fill its column */
			aspect-ratio: auto; /* Remove aspect-ratio to allow height to adjust */
		}

		.section-header {
			font-size: var(--text-lg);
			/* Removed desktop specific text-align and justify-self overrides */
		}
	}

	.contact-info {
		text-align: left; /* Ensure contact info text is left-aligned */
	}

	.contact-info h3 {
		font-size: var(--text-xl);
		margin-bottom: 2rem; /* Increased margin for more space */
		color: var(--gray-0);
	}

	.contact-info p {
		margin-bottom: 1.5rem; /* Increased margin for more space between details */
		color: var(--gray-300);
		display: flex;
		align-items: center;
		justify-content: flex-start;
		font-size: var(--text-md); /* Slightly decreased font size */
		font-weight: bold; /* Bolder style */
	}

	.contact-info i {
		margin-right: 0.5em;
		font-size: 1.2em;
		color: var(--accent-regular);
	}

	.contact-form {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		width: 100%;
	}

	.form-group {
		display: flex;
		flex-direction: column;
	}

	.form-group label {
		margin-bottom: 0.5rem;
		font-weight: bold;
		color: var(--gray-0);
	}

	.form-group input[type="text"],
	.form-group input[type="email"],
	.form-group textarea {
		padding: 0.75rem;
		border: 1px solid var(--gray-700);
		border-radius: 0.5rem;
		background-color: var(--gray-900);
		color: var(--gray-0);
		font-size: var(--text-base);
	}

	.form-group input[type="text"]:focus,
	.form-group input[type="email"]:focus,
	.form-group textarea:focus {
		outline: none;
		border-color: var(--accent-regular);
		box-shadow: 0 0 0 3px rgba(var(--accent-regular-rgb), 0.2);
	}

	.contact-form .call-to-action {
		margin-top: 1rem;
	}
</style>
